<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rms.basicnfc.test.MainActivity"
    tools:showIn="@layout/activity_home">

    <ImageView android:id="@+id/layout_tap_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:src="@drawable/tap_card"
        android:scaleType="fitXY"/>

    <dbs.smileytown.poc.view.CustomTextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/error_message_text_size"
        android:text="@string/instructions"
        app:font="@string/font_raleway_extrabd"
        android:textColor="@color/posb_lightblue"
        android:layout_marginTop="@dimen/error_message_margintop"
        android:layout_marginLeft="@dimen/error_message_marginleft"
        android:layout_marginRight="@dimen/error_message_marginleft"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />
</FrameLayout>
